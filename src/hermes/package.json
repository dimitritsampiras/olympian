{
  "name": "olympia-server",
  "version": "1.0.0",
  "description": "Graphql express server for olympia ",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --no-notify --transpile-only src/app",
    "start": "node dist/app.js",
    "build": "npx tsc",
    "watch": "npx tsc --watch",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/server/schema",
    "migrate": "npx prisma migrate dev --name init",
    "studio": "npx prisma studio"
  },
  "author": "Dimitri Tsampiras",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.15.2",
    "@types/luxon": "^3.1.0",
    "apollo-server-express": "^3.11.1",
    "argon2": "^0.30.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^3.1.0",
    "nexus": "^1.3.0",
    "nexus-prisma": "^0.35.0",
    "prisma": "^4.6.1",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "typescript": "^4.8.4",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/client-preset": "1.1.3"
  }
}
