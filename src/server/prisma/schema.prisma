// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String
  username String @unique
  password String
}

model Program {
  id            String         @id @default(cuid())
  name          String
  // complimentary to other programs. for searching purposes
  // i.e. stretch routine etc. 
  complimentary Boolean?
  // type of training for searching purposes
  specificity   Specifity[]
  // optionally provide training level recommended for program
  trainingLevel TrainingLevel?
  // list of tags for search purposes
  tags          String[]
  // progress markers set by author of program
  milestones    String[]
  // program is not to be viewed publicly
  private       Boolean?
}

model Workout {
  id       String   @id @default(cuid())
  name     String
  
  duration DateTime
  
}

enum Specifity {
  general
  strength
  hypertrophy
  athletic
  cardio
}

enum TrainingLevel {
  beginner
  intermediate
  advanced
}
